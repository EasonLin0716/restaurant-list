<div class="container my-4">
  <form action="/restaurants" method="POST">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳名字<span class="text-danger">*</span></label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳名字..." name="name" required="required">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳英文名字</label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳英文名字..." name="name_en">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳種類</label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳種類..." name="category">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳照片<span class="text-danger">*</span></label>
      <input class="col-sm-10" type="url" placeholder="請輸入餐廳照片..." name="image" required="required">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳位置<span class="text-danger">*</span></label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳位置..." name="location" required="required">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳電話<span class="text-danger">*</span></label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳電話..." name="phone" required="required">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳地圖</label>
      <input class="col-sm-10" type="text" placeholder="請輸入餐廳地圖..." name="google_map">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳評價</label>
      <input type="number" step="0.1" min="1" max="5" class="col-sm-10" placeholder="請輸入餐廳評價..." name="rating">
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">餐廳描述<span class="text-danger">*</span></label>
      <input class="col-sm-10" type="text" placeholder="請為餐廳寫點描述..." name="description" required="required">
    </div>
    <button class="btn btn-primary btn-lg" type="submit">建立新餐廳</button>
  </form>
</div>