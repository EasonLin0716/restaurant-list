<!-- views/login.handlebars -->

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      {{!-- 引用 messages 這個 partial view --}}
      {{> messages}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
        </div>
        <div class="row d-flex justify-content-center" id="oath-login">
          <button type="submit" class="btn btn-primary col-9">Login</button>
          <a href="/auth/facebook" class="btn btn-success mx-2"><i class="fab fa-facebook-square"></i></a>
          <a href="/auth/google" class="btn btn-info"><i class="fab fa-google"></i></a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account?&nbsp;&nbsp;<a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>